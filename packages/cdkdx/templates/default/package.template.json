{
  "name": "{{name}}",
  "version": "0.1.0",
  "license": "MIT",
  "author": "{{author}}",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/{{author}}/{{name}}.git"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  {% ifjsii %}"jsii": {
    "outdir": "dist",
    "tsc": {
      "outDir": "./lib"
    },
    "excludeTypescript": [
      "src/lambdas",
      "src/**/__tests__"
    ],
    "targets": {
      "python": {
        "distName": "{{name}}",
        "module": "{{name | underscore}}"
      }
    }
  },{% endifjsii %}
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "cdkdx build",
    "watch": "cdkdx watch",
    "test": "cdkdx test",
    "lint": "cdkdx lint"
  },
  "peerDependencies": {
    "@aws-cdk/core": "^{{cdkVersion}}"
  },
  "dependencies": {
    "@aws-cdk/aws-lambda": "^{{cdkVersion}}",
    "@aws-cdk/core": "^{{cdkVersion}}"
  },
  "devDependencies": {
    "@aws-cdk/assert": "^{{cdkVersion}}",
    "@types/aws-lambda": "^8.10.51",
    "@types/jest": "^25.2.3",
    "@types/node": "13.9.0",
    "cdkdx": "^{{cdkdxVersion}}"
  }
}
